{
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "build",
  "devCommand": "npm start",
  "installCommand": "npm install",
  "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "env": {
    "REACT_APP_FIREBASE_API_KEY": "@react-app-firebase-api-key",
    "REACT_APP_FIREBASE_AUTH_DOMAIN": "@react-app-firebase-auth-domain",
    "REACT_APP_FIREBASE_PROJECT_ID": "@react-app-firebase-project-id",
    "REACT_APP_FIREBASE_STORAGE_BUCKET": "@react-app-firebase-storage-bucket",
    "REACT_APP_FIREBASE_MESSAGING_SENDER_ID": "@react-app-firebase-messaging-sender-id",
    "REACT_APP_FIREBASE_APP_ID": "@react-app-firebase-app-id",
    "REACT_APP_FIREBASE_MEASUREMENT_ID": "@react-app-firebase-measurement-id"
  }
}